/**index.wxss**/
.upper{
  color: #fff;
  background: linear-gradient(90deg,#f7941c,#ffa42c 30%,#f7941c);
  box-sizing: border-box;
  padding: 60rpx ;
  position: relative;
  height: 390rpx;
  display: flex;
  justify-content: center;
  text-align: center;
}
.upper .info{
   padding: 50rpx 0rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
 }
.upper .info .item{
   line-height: 60rpx;
 }
 .mark{
   font-size: 24rpx;
 }
.mark .num{
   font-size: 50rpx;
 }
 .upper .logo{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 125rpx;
  height: 125rpx;
  /* margin-top: -62.5rpx; */
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 0 15rpx #fff;
 }
.upper .logo image{
  width: 100%;
  height: 100%;
}

/*咨询*/
.advisory{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.advisory button{
  width: 40%;
  line-height: 80rpx;
}
.advisory button:last-child{
  background: #f7941c;
  color: #fff;
}
.product{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}
.product .tiem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  padding: 40rpx  0rpx;
  font-size: 24rpx;
  width:300rpx;
  height: 240rpx;
  box-sizing: border-box;
}
.product .tiem .icon{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 35rpx;
}
.product .tiem .icon image{
  width: 100%;
  height: 100%;
}
.product .tiem_info{
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}
/*头部 bannber 样式*/
.stv-container {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666666;
  bottom: 0;
}
.stv-container .tab-bar .tab-active {
  color: #fff;
}
.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}
.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 2rpx;
  height: 6rpx;
  background-color: #fff;
}
.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 390rpx;
  background: #fff;
  overflow: hidden;
}
.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}
.stv-container .scroll-view .scroll-view-wrapper .one-scene {
  height: 100%;
}
