page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
    background: #f2f2f2;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
.upper {
    color: #fff;
    background: linear-gradient(90deg, #f7941c, #ffa42c 30%, #f7941c);
    box-sizing: border-box;
    padding: 45rpx;
    position: relative;
}

.upper .info {
    padding: 30rpx 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.upper .info .item {
    padding-bottom: 30rpx;
    text-align: center;
}

.upper .info .intro {
    text-align: center;
    font-size: 30rpx;
}
.lower{
    flex: 1;
    height: 100%;
    overflow: scroll;
}
.product {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
}

.product .box {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-size: 24rpx;
    width: 49%;
    overflow: scroll;
}
.product .box .item{
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 1%;
    flex-direction: column;
    padding: 45rpx 0;
    background: #fff;
    width: 100%;
    height: 100%;
}
.product .box .icon {
    width: 180rpx;
    height: 120rpx;
    margin-bottom: 25rpx;
}

.product .box .icon image {
    width: 100%;
    height: 100%;
}

